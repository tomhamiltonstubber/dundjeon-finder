{% extends 'base.jinja' %}
{% block content %}

<section class="pt-32 pb-10 text-white">
	<div class="container mx-auto">
		<div class="flex">
			<div class="w-1/4">
				{% include "/partials/profile_listing.jinja" %}
			</div>
			<div class="w-3/4 pl-10">
				<h2 class="text-3xl mt-2 leading-tight font-heading">{{ campaign.name }}</h2>
				<h3 class="text-2xl mt-2 leading-tight font-heading text-gray-500">4 Days until next game</h3>
				<div class="w-1/3 relative hidden" style="margin-top:-65px;margin-bottom:-300px;">
					<img src="https://images.twinkl.co.uk/tr/image/upload/illustation/Campfire.png">
				</div>
			</div>
		</div>
	</div>
</section>
<section class="bg-gray-300 py-10">
	<div class="container mx-auto text-center">
		<div class="w-2/3 mx-auto text-xl leading-7">
			<h2 class="text-2xl font-heading">The Story</h2>
			{{ campaign.description }}
		</div>
	</div>
</section>
<section class="py-10">
	<div class="container mx-auto text-center">
		<div class="w-2/3 mx-auto text-xl leading-7 text-white mb-10">
			<h2 class="text-2xl font-heading">The Players</h2>
		</div>
		<div class="flex flex-wrap">
			{% for player in campaign.players.all() %}
				{% include "/partials/player.jinja" %}
			{% endfor %}
		</div>
	</div>
</section>
<section class="py-10 bg-gray-500">
	<div class="container mx-auto text-center">
		<div class="w-2/3 mx-auto text-xl leading-7 text-white mb-10">
			<h2 class="text-2xl font-heading">Reviews for [INSERT CAMPAIGN PLAYER NAME]</h2>
		</div>
	</div>
</section>
<div class="fixed bottom-20 right-20 text-xs">
	<button class="inline-block py-4 px-8 leading-none text-white btn hover:bg-indigo-600 rounded shadow">
		Join Campaign
	</button>
</div>
{% endblock %}
