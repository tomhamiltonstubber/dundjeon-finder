{% extends 'base.jinja' %}

{% block content %}
<section class="py-12 px-4 text-center text-white h-screen flex items-center">
  <div class="w-full max-w-2xl mx-auto">
    <h2 class="text-6xl mt-2 mb-6 leading-tight font-heading">Login</h2>
    <div class="w-full max-w-sm mx-auto">
      <form method="post">
          <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
          <div id="login-form">
            {{ form }}
            <button class="btn btn-primary" type="submit">Login</button>
          </div>
        </form>
    </div>
  </div>
</section>
{% endblock %}