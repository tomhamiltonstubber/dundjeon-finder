{% extends 'base.jinja' %}

{% block content %}
<section class="pb-20 pt-20 px-4 flex items-center">
	<div class="w-full max-w-5xl mx-auto">
		<div class="pt-10">
			<div class="w-2/3 mx-auto text-white mb-10">
				<div class="hr-icon">
					<img src="/static/img/helmet.svg" alt="">
				</div>
				<hr class="hr-text text-xl leading-7" data-content="Campaigns">
			<table class="w-full">
				{% if user.campaigns.count() == 0 %}
					<div class="text-center">
						<h2 class="mb-6">You haven't joined any games yet, click here to view all games.</h2>
						<a href="{{ url('avail-campaign-list')}}" class="btn">View Games</a>
					</div>
				{% else %}
				<thead>
					<tr class="text-gray-400 text-left">
						<th class="w-1/2">Name</th>
						<th class="w-1/4">Game Master</th>
						<th class="w-1/4">Actions</th>
					</tr>
				</thead>
				<tbody>
				{% for camp in user.campaigns.all() %}
					<tr>
						<td class="py-5">{{camp.name}}</td>
						<td class="py-5">
							{{camp.creator}}
						</td>
						<td class="py-5 align-middle">
						<div class="flex items-center">
							<a href="#" class="mr-4">
								<img src="/static/img/quit.svg" class="w-5 h-5">
							</a>
							<a href="{{camp.get_absolute_url()}}">
								<img src="/static/img/eye.svg" class="w-6 h-6">
							</a>
							</div>
						</td>
					</tr>
				{% endfor %}
				{% endif %}
				</tbody>
			</table>
		</div>
	</div>
</section>
{% endblock %}
